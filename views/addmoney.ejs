<%- include('partials/header'); %>
<h1 class="h3 mb-4 text-gray-800">Add Money</h1>
<div class="card shadow mb-4">
  <a
    href="#collapseCardExample"
    class="d-block card-header py-3"
    data-toggle="collapse"
    role="button"
    aria-expanded="true"
    aria-controls="collapseCardExample"
  >
    <h6 class="m-0 font-weight-bold text-primary">
      <i class="fas fa-fw fa-wallet"></i>
      Add New Money Entry
    </h6>
  </a>

  <div class="collapse show" id="collapseCardExample">
    <div class="card-body">
      <!-- hi -->
      <div class="p-5">
        <form class="user" action="/mess/addmoney" method="POST" autocomplete="off">
          <div class="row"><%- include('partials/msgs'); %></div>

          <div class="form-group row">
            <div class="col-sm-6 mb-3 mb-sm-0">
              <label for="exampleSelect1">Money Type</label>
              <select id="mType" name="mType" type="text" class="form-control">
                <option><%= typeof mType != 'undefined' ? mType : '' %></option>
                <option>Advance</option>
                <option>Rent</option>
                <option>Bill</option>
                <option>Other</option>
              </select>
            </div>
            <div class="col-sm-6">
              <label class="text-gray-900">Date</label>
              <input
                id="date"
                name="date"
                type="date"
                value="<%= typeof date != 'undefined' ? date : '' %>"
                class="form-control"
              />
            </div>
          </div>

          <div class="form-group row">
            <div class="col-sm-6 mb-3 mb-sm-0">
              <label for="exampleSelect1">Member</label>
              <select id="memName" name="memName" type="text" class="form-control">
                <option><%= typeof memName != 'undefined' ? memName : '' %></option>
                <% records.forEach((row) => { %>
                <option><%= row.fName %></option>
                <% }) %>
              </select>
            </div>
            <div class="col-sm-6">
              <label class="text-gray-900">Amount</label>
              <input
                id="amount"
                name="amount"
                type="number"
                placeholder="e.g. 1000 "
                value="<%= typeof amount != 'undefined' ? amount : '' %>"
                class="form-control"
              />
            </div>
          </div>

          <div class="form-group row">
            <div class="col-sm-6 mb-3 mb-sm-0">
              <button type="submit" class="btn btn-primary btn-block">
                <i class="fas fa-fw fa-plus"></i>
                Add Money
              </button>
            </div>
            <div class="col-sm-6">
              <button type="reset" class="btn btn-secondary btn-block">
                <i class="fas fa-fw fa-ban"></i>
                Reset
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
    <!-- hi -->
  </div>
</div>
<%- include('partials/footer'); %>
