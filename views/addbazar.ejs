<%- include('partials/header'); %>
<h1 class="h3 mb-4 text-gray-800">Add Bazar</h1>
<div class="card shadow mb-4">
  <a
    href="#collapseCardExample"
    class="d-block card-header py-3"
    data-toggle="collapse"
    role="button"
    aria-expanded="true"
    aria-controls="collapseCardExample"
  >
    <h6 class="m-0 font-weight-bold text-primary">
      <i class="fas fa-fw fa-shopping-basket"></i>
      Add New Bazar
    </h6>
  </a>

  <div class="collapse show" id="collapseCardExample">
    <div class="card-body">
      <!-- hi -->

      <div class="p-5">
        <form class="user" action="/mess/addbazar" method="POST" autocomplete="off">
          <div class="row"><%- include('partials/msgs'); %></div>
          <div class="form-group row">
            <div class="col-sm-6 mb-3 mb-sm-0">
              <label class="text-gray-900">Date:</label>
              <input
                id="date"
                name="date"
                type="date"
                value="<%= typeof date != 'undefined' ? date : '' %>"
                class="form-control form-control-user"
              />
            </div>
            <div class="col-sm-6">
              <label class="text-gray-900">Amount:</label>
              <input
                id="amount"
                name="amount"
                type="number"
                placeholder="e.g. $367"
                value="<%= typeof amount != 'undefined' ? amount : '' %>"
                class="form-control form-control-user"
              />
            </div>
          </div>

          <div class="form-group row">
            <div class="col-sm-8 mb-3 mb-sm-0">
              <label class="text-gray-900">Bazar Description:</label>
              <input
                id="desc"
                name="desc"
                type="text"
                value="<%= typeof desc != 'undefined' ? desc : '' %>"
                placeholder="e.g. Alu 1kg"
                class="form-control form-control-user"
              />
            </div>
            <div class="col-sm-4">
              <label class="text-gray-900">Receipt:</label>
              <input
                id="receipt"
                name="receipt"
                type="text"
                placeholder="e.g. Swapno-1076"
                value="<%= typeof receipt != 'undefined' ? receipt : '' %>"
                class="form-control form-control-user"
              />
            </div>
          </div>

          <div class="form-group row">
            <div class="col-sm-6 mb-3 mb-sm-0">
              <button type="submit" class="btn btn-primary btn-user btn-block">
                <i class="fas fa-fw fa-plus"></i>
                Add Bazar
              </button>
            </div>
            <div class="col-sm-6">
              <button type="reset" class="btn btn-secondary btn-user btn-block">
                <i class="fas fa-fw fa-ban"></i>
                Reset
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
    <!-- hi -->
  </div>
</div>
<%- include('partials/footer'); %>
