<%- include('partials/header'); %>
<h1 class="h3 mb-4 text-gray-800">User Profile</h1>

<div class="row gutters-sm">
  <div class="col-md-4 mb-3">
    <div class="card shadow">
      <div class="card-body">
        <div class="d-flex flex-column align-items-center text-center">
          <img src="/res/img/user.svg" alt="Admin" class="rounded-circle" width="150" />
          <div class="mt-3">
            <h4><%= name %></h4>
            <% if(type==1){ %>
            <p class="text-danger mb-1">Manager</p>
            <% } else{ %>
            <p class="text-secondary mb-1">Member</p>
            <% } %>
            <p class="text-muted font-size-sm"><%= address %></p>
            <button class="btn btn-primary">Edit Profile</button>
            <button class="btn btn-outline-primary">Logout</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-8">
    <div class="card shadow mb-3">
      <div class="card-header">
        <div class="mb-0 font-weight-bold text-gray-800">Informations</div>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-sm-3">
            <h6 class="mb-0">First Name</h6>
          </div>
          <div class="col-sm-9 text-secondary"><%= fName %></div>
        </div>
        <hr />
        <div class="row">
          <div class="col-sm-3">
            <h6 class="mb-0">Last Name</h6>
          </div>
          <div class="col-sm-9 text-secondary"><%= lName %></div>
        </div>
        <hr />
        <div class="row">
          <div class="col-sm-3">
            <h6 class="mb-0">Email</h6>
          </div>
          <div class="col-sm-9 text-secondary"><%= email %></div>
        </div>
        <hr />
        <div class="row">
          <div class="col-sm-3">
            <h6 class="mb-0">Phone</h6>
          </div>
          <div class="col-sm-9 text-secondary"><%= phone %></div>
        </div>
        <hr />
        <div class="row">
          <div class="col-sm-3">
            <h6 class="mb-0">Address</h6>
          </div>
          <div class="col-sm-9 text-secondary"><%= address %></div>
        </div>
      </div>
      <div class="card-footer"></div>
    </div>
  </div>
</div>
<%- include('partials/footer'); %>
