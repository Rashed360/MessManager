<%- include('partials/header'); %>
<h1 class="h3 mb-4 text-gray-800">Bazar List</h1>
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Your Previous Bazars - This Month</h6>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>Description</th>
            <th>Receipt</th>
            <th>Money Spent</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <% records.forEach((row) => { %>
          <tr>
            <td><%= row.desc %></td>
            <td><%= row.receipt %></td>
            <td><%= row.amount %></td>
            <td><span class="small"><%= row.date %></span></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
